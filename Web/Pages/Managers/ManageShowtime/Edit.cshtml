@page
@model Web.Pages.Managers.ManageShowtime.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Showtime</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Showtime.ShowtimeId" />
            <div class="form-group">
                <label asp-for="Showtime.MovieId" class="control-label"></label>
                <select asp-for="Showtime.MovieId" class="form-control" asp-items="ViewBag.MovieId"></select>
                <span asp-validation-for="Showtime.MovieId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Showtime.TheaterId" class="control-label"></label>
                <select asp-for="Showtime.TheaterId" class="form-control" asp-items="ViewBag.TheaterId"></select>
                <span asp-validation-for="Showtime.TheaterId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Showtime.StartTime" class="control-label"></label>
                <input asp-for="Showtime.StartTime" class="form-control" />
                <span asp-validation-for="Showtime.StartTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Showtime.EndTime" class="control-label"></label>
                <input asp-for="Showtime.EndTime" class="form-control" />
                <span asp-validation-for="Showtime.EndTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
