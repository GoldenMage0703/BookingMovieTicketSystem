@page
@model Web.Pages.Managers.ManageShowtime.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Showtime</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form id="showtimeForm" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Showtime.MovieId" class="control-label"></label>
                <select asp-for="Showtime.MovieId" class="form-control" asp-items="ViewBag.MovieId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Showtime.TheaterId" class="control-label"></label>
                <select asp-for="Showtime.TheaterId" class="form-control" asp-items="ViewBag.TheaterId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Showtime.StartTime" class="control-label"></label>
                <input asp-for="Showtime.StartTime" id="startTime" class="form-control" type="datetime-local" />
                <span id="startTimeError" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Showtime.EndTime" class="control-label"></label>
                <input asp-for="Showtime.EndTime" id="endTime" class="form-control" type="datetime-local" />
                <span id="endTimeError" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    <script>
        document.getElementById('showtimeForm').addEventListener('submit', function (event) {
            // Get the values of the date inputs
            var startTime = new Date(document.getElementById('startTime').value);
            var endTime = new Date(document.getElementById('endTime').value);
            var now = new Date();

            // Clear previous error messages
            document.getElementById('startTimeError').innerText = '';
            document.getElementById('endTimeError').innerText = '';

            var valid = true;

            // Validate that StartTime and EndTime are at least the next day
            if (startTime < new Date(now.setDate(now.getDate() + 1))) {
                document.getElementById('startTimeError').innerText = 'Start time must be at least the next day.';
                valid = false;
            }

            if (endTime < new Date(now.setDate(now.getDate() + 1))) {
                document.getElementById('endTimeError').innerText = 'End time must be at least the next day.';
                valid = false;
            }

            // Validate that EndTime is after StartTime
            if (endTime <= startTime) {
                document.getElementById('endTimeError').innerText = 'End time must be after start time.';
                valid = false;
            }

            if (!valid) {
                event.preventDefault(); // Prevent form submission if validation fails
            }
        });
    </script>
}
