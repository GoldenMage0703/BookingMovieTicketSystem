@page
@model YourNamespace.Pages.ManageMovie.IndexModel
@{
    ViewData["Title"] = "List of Movies";
}

<h1 class="display-4">@ViewData["Title"]</h1>

<div class="mb-3">
    <a class="btn btn-primary" asp-page="CreateMovie">Create New</a>
</div>

<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead class="thead-dark">
            <tr>
                <th scope="col">Title</th>
                <th scope="col">Release Date</th>
                <th scope="col">Duration (min)</th>
                <th scope="col">Poster</th>
                <th scope="col">Director</th>
                <th scope="col">Rating</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Movies)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Title)</td>
                    <td>@Html.DisplayFor(modelItem => item.ReleaseDate)</td>
                    <td>@Html.DisplayFor(modelItem => item.Duration)</td>
                    <td><img src="@Url.Content(item.Poster)" class="img-thumbnail" style="max-height: 150px; max-width: 100px;" /></td>
                    <td>@Html.DisplayFor(modelItem => item.DirectorName)</td>
                    <td>@Html.DisplayFor(modelItem => item.Rating) ⭐</td>
                    <td>
                        <div class="btn-group" role="group">
                            <a class="btn btn-sm btn-outline-primary" asp-page="./Edit" asp-route-id="@item.MovieId">Edit</a>
                            <a class="btn btn-sm btn-outline-info" asp-page="./Details" asp-route-id="@item.MovieId">Details</a>
                            <a class="btn btn-sm btn-outline-danger" asp-page="./Delete" asp-route-id="@item.MovieId">Delete</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<div>
    
    <nav aria-label="Page navigation">
        <ul class="pagination justify-content-center">
            @if (Model.PageNumber > 1)
            {
                <li class="page-item">
                    <a class="page-link" asp-page="./Index" asp-route-pageNumber="@(Model.PageNumber - 1)">Previous</a>
                </li>
            }

            @for (int i = 1; i <= Model.TotalPages; i++)
            {
                <li class="page-item @(i == Model.PageNumber ? "active" : "")">
                    <a class="page-link" asp-page="./Index" asp-route-pageNumber="@i" >@i</a>
                </li>
            }

            @if (Model.PageNumber < Model.TotalPages)
            {
                <li class="page-item">
                    <a class="page-link" asp-page="./Index" asp-route-pageNumber="@(Model.PageNumber + 1)">Next</a>
                </li>
            }
        </ul>
    </nav>

</div>
